#!/bin/bash

# Author: Caroline

# Date: June 2022

## Script for system inventory

echo " Checking the memory size please wait ... "

sleep 3

free -m

echo " Checking the number of cpu please  ... "

sleep 3

nproc

echo " Checking the system hard please wait ... "

sleep 4

lsblk

echo " Checking what the OS installed "

sleep 4

cat /etc/os-release
